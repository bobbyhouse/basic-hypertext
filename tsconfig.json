{
  "compilerOptions": {
    "outDir": "dist",
    "declaration": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "target": "ES6",
    "module": "ES6"
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"]
}
